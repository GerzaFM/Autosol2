# Configuración de Base de Datos
# Copie este archivo como .env y configure sus valores

# Tipo de base de datos: sqlite o postgresql
DB_TYPE=sqlite

# Configuración PostgreSQL (solo si DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tcm_matehuala
DB_USER=postgres
DB_PASSWORD=su_contraseña_aqui

# Configuración de la aplicación
DEBUG=False
LOG_LEVEL=INFO

# URLs y actualizaciones (opcional)
GITHUB_REPO=GerzaFM/Autosol2
AUTO_UPDATE=true
